USER:
    name: String
    email: String
    hashed_password: String
    salt: String
    about: String
    role: Number
    history: Array

CATEGORY:
    name: String

PRODUCT: 
    name: String
    description: String
    category: ObjectId
    price: Number
    quantity: Number
    sold: Number
    shipping: Boolean
    photo1->5: Buffer

ITEM:
    product: ObjectId
    name: String
    price: Number
    count: Number

ORDER:
    products: [ITEM],
    transaction_id: String
    amount: Number
    user: ObjectId
    address: String
    status: String
    updated: Date


